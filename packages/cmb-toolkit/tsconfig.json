{
  "include": ["src/**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    // Don't typecheck stuff internal to node_modules
    "skipLibCheck": true,
  }
}
